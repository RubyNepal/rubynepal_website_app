  </div>
  <div class="field">
    <%= f.label "github url *" %><br />
    <%= f.text_field :github, required: "required" %>
  </div>
  <div class="field">
    <%= f.label "linkedin url" %><br />
    <%= f.text_field :linkedin %>
  </div>
  <div class="field">
    <%= f.label :employement %><br />
    <%= f.text_field :employement %>
  </div>
  <div class="field">
    <%= f.label "Short Bio" %><br />
    <%= f.text_area :short_bio, rows: 10, cols: 50 %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn"%>
  </div>
